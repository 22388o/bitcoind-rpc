{
  "name": "@ln-markets/bitcoind-rpc",
  "version": "0.1.0",
  "description": "Bitcoind RPC Client",
  "main": "src/index.js",
  "files": [
    "src/**/*.js"
  ],
  "type": "module",
  "keywords": [
    "bitcoin",
    "rpc",
    "bitcoind"
  ],
  "author": "Victor Afanassieff",
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ln-markets/bitcoind-rpc.git"
  },
  "bugs": {
    "url": "https://github.com/ln-markets/bitcoind-rpc/issues"
  },
  "homepage": "https://github.com/ln-markets/bitcoind-rpc#readme",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "ava",
    "prepare": "husky install",
    "eslint": "xo --fix",
    "prettier": "prettier --write",
    "lint": "xo",
    "format": "prettier --write 'src/**/*.js'"
  },
  "dependencies": {
    "json-bigint": "^1.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "15.0.0",
    "@commitlint/config-conventional": "15.0.0",
    "ava": "^3.15.0",
    "husky": "7.0.4",
    "lint-staged": "12.1.2",
    "prettier": "2.5.1",
    "xo": "^0.47.0"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "xo --fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "always",
    "bracketSpacing": true
  },
  "xo": {
    "space": true,
    "prettier": true,
    "semicolon": false,
    "ignores": [
      "examples"
    ]
  }
}
